{
    "compilerOptions": {
      "module": "commonjs",
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "strict": true,
      "target": "es2022",
      "skipLibCheck": true,
      "declaration": true
    },
    "lib": [
      "es2022"
    ],
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules/**/*",
      "**/*.spec.ts"
    ]
  }
